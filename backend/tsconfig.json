{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "lib": ["es6"],
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "pretty": true,
    "incremental": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@app/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "public/client"],
  "include": ["src/**/*", "build"]
}
