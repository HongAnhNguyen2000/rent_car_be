# FROM node:12.22-bullseye-slim
FROM node:18.16.0-bullseye-slim

RUN apt-get update && apt-get install -y --no-install-recommends python python3 python3-pip python3-setuptools python3-wheel python3-dev build-essential default-libmysqlclient-dev default-mysql-client libzip-dev unzip

RUN mkdir /code

WORKDIR /code

ADD ./package.json /code/

RUN yarn
